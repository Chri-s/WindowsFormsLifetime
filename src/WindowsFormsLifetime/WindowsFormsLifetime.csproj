<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <Description>.NET Core hosting infrastructure for Windows Forms.</Description>
    <TargetFrameworks>netcoreapp3.1;net5-windows</TargetFrameworks>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <UseWindowsForms>true</UseWindowsForms>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>aspnetcore;hosting;winforms</PackageTags>
    <PackageId>OswaldTechnologies.Extensions.Hosting.WindowsFormsLifetime</PackageId>
    <Version>0.0.3</Version>
    <RepositoryUrl>https://github.com/oswald-technologies/WindowsFormsLifetime</RepositoryUrl>
    <Authors>Alex Oswald</Authors>
    <Company>Oswald Technologies, LLC</Company>
    <RootNamespace>OswaldTechnologies.Extensions.Hosting.WindowsFormsLifetime</RootNamespace>
    <AssemblyName>OswaldTechnologies.Extensions.Hosting.WindowsFormsLifetime</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.0" />
  </ItemGroup>

</Project>